@page
@model BBankTestTask.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавление продукта</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label">Наименование продукта</label>
                <input asp-for="Product.ProductName" class="form-control" required/>
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryName" class="control-label">Категория</label>
                <select asp-for="Product.CategoryName" class="form-control" asp-items="ViewBag.CategoryName"></select>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductDescription" class="control-label">Описание</label>
                <textarea asp-for="Product.ProductDescription" class="form-control"></textarea>
                <span asp-validation-for="Product.ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductPrice" class="control-label">Стоимость в рублях</label>
                <input asp-for="Product.ProductPrice" class="form-control" required type="number" step="any"/>
                <span asp-validation-for="Product.ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductGenaralNote" class="control-label">Примечание общее</label>
                <textarea asp-for="Product.ProductGenaralNote" class="form-control"></textarea>
                <span asp-validation-for="Product.ProductGenaralNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductSpeciallNote" class="control-label">Примечание специальное</label>
                <textarea asp-for="Product.ProductSpeciallNote" class="form-control"></textarea>
                <span asp-validation-for="Product.ProductSpeciallNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
